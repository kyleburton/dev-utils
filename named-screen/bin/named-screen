#!/bin/bash
if [ "$1" = "--here" ]; then
  shift
  NAME="$(basename $PWD)"
else
  NAME="$1"
  shift
fi

PROJ="$1"
shift

function rn_create_named_screen() {
  if [ -n "$PROJ" ]; then
    if [ -d $PROJ ]; then
      cd $PROJ
    else
      cd $HOME/projects/$PROJ
    fi
  fi
  screen -S "$NAME"
}

if [ -z "$NAME" ]; then
  echo "$(basename $0) screen-name [starting-directory]"
  screen -ls
  exit 1
fi

if screen -ls | grep -q "$NAME"; then
  if screen -x "$NAME"; then
    exit $?
  else
    rn_create_named_screen
  fi
else
  rn_create_named_screen
fi
